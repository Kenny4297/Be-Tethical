<div class="post-item">
    <div class="post-header"> 
        <p>{{post_title}}</p>
        <p>{{user.username}} made this post on {{ format_date post_date }} </p>
    </div>
    <div class="post-body">
        {{ post_content }}
    </div>
    <div class="comment-to-post-section">
        <div class="comment">
            {{#each comments as |comment|}}
                {{> individualComments comment=comment user=user }}
            {{/each}}
        </div>
    </div>
    <button class="edit-post-button" data-id="{{post.id}}">Edit me</button>

</div>

<script src="/js/editPost.js"></script>