<div class="login-page">
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">

        <p><label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" /></p>


        <p><label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" /></p>


        <button class="btn btn-primary" type="submit">login</button>

    </form>
  </div>
  <div class="signup-card">
    <h2 class="page-title">Not registered? Signup!</h2>
    <form class="form signup-form">

        <p><label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" /></p>


        <p></p><label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" /></p>


        <p></p><label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" /></p>


        <button class="btn btn-primary" type="submit">signup</button>

    </form>
  </div>
</div>

<script src="./js/login.js"></script>